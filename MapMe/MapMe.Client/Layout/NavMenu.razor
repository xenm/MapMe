@using Microsoft.AspNetCore.Components.Authorization
@using MapMe.Client.Services
@inject AuthenticationService AuthService
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="map">MapMe</a>
        <AuthorizeView>
            <Authorized>
                <span class="navbar-text me-3">Welcome, @context.User.FindFirst("DisplayName")?.Value</span>
                <button class="btn btn-outline-light btn-sm" @onclick="LogoutAsync">
                    <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Logout
                </button>
            </Authorized>
        </AuthorizeView>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="map" Match="NavLinkMatch.All">
                        <span class="bi bi-map-fill" aria-hidden="true"></span> Map
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="chat">
                        <span class="bi bi-chat-dots-fill" aria-hidden="true"></span> Chat
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="profile">
                        <span class="bi bi-person-fill" aria-hidden="true"></span> Profile
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="signup">
                        <span class="bi bi-person-plus-fill" aria-hidden="true"></span> Sign Up
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private async Task LogoutAsync()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login");
    }
}